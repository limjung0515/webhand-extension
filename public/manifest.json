{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "version": "0.1.0",
    "description": "__MSG_extensionDescription__",
    "default_locale": "ko",
    "action": {
        "default_icon": {
            "16": "icons/icon-16.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        },
        "default_title": "WebHand - 웹 스크래핑 도구"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "matches": [
                "<all_urls>"
            ],
            "run_at": "document_idle",
            "all_frames": false,
            "type": "module"
        }
    ],
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "sidePanel",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/sidepanel/index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "minimum_chrome_version": "114"
}